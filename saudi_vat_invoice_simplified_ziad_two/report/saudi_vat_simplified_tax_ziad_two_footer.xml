<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="saudi_vat_simplified_tax_ziad_two_footer">
            <div t-attf-class="footer o_clean_footer">
                <div class="row mt-8" style="font-family: cairo !important;">
                    <div class="col-3 text-center">
                        <span>
                            الرمز:
                            <t t-esc="doc.company_id.zip"/>
                        </span>
                    </div>
                    -
                    <div class="col-3 text-center">
                       <span>
                            ص / ب
                           <t>60133</t>
                        </span>
                    </div>
                    -
                    <div class="col-6 text-center">
                        <span>
                            <t t-esc="doc.company_id.country_arabic"/>
                            -
                            <t t-esc="doc.company_id.city_arabic"/>
                            -
                            <t t-esc="doc.company_id.district_id_arabic"/>
                        </span>
                    </div>
                </div>
                <div class="row col-12 mt-10" style="font-family: cairo !important;">
                    <div class="col-7 text-center">
                        <span>
                            <t t-esc="doc.company_id.country_id.name"/>
                            -
                            <t t-esc="doc.company_id.city"/>
                             -
                            <t t-esc="doc.company_id.district_id.name"/>
                        </span>
                    </div>
                    -
                   <div class="col-3 text-center">
                       <span>
                            TEL:
                            <t t-esc="doc.company_id.phone"/>
                        </span>
                    </div>
                    -
                    <div class="col-2 text-center">
                        <span>
                            Code:
                            <t t-esc="doc.company_id.zip"/>
                        </span>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>